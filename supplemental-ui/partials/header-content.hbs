<header class="header">
  <nav class="navbar">
    <div class="navbar-brand">
      <a class="navbar-item logo" title="catcodeme_blog" href="{{{@root.site.url}}}"><img
          src="{{{uiRootPath}}}/img/logo.svg" alt="catcodeme_blog" width="120"></a>
      <a class="navbar-item" href="{{{or site.url siteRootPath}}}">{{site.title}}</a>
      {{#if env.SITE_SEARCH_PROVIDER}}
      <div class="navbar-item search hide-for-print">
        <div id="search-field" class="field has-filter">
          <input id="search-input" type="text" placeholder="search" {{#if page.home}} autofocus{{/if}}>
          <label class="filter checkbox">
            <input type="checkbox" data-facet-filter="component:{{page.component.name}}"> In this project
          </label>
        </div>
      </div>
      {{/if}}
    </div>
  </nav>
</header>